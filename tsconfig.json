{
  "compilerOptions": {
    "baseUrl": "src",
    "noEmit": true,

    "target": "ES2023",
    "module": "CommonJS",
    
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*.js",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}